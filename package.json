{
  "name": "@loyalty/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx build dv",
    "build:prod": "REACT_APP_API_URL=https://your-api-domain.com/api nx build dv --prod && node fix-paths.js",
    "serve": "nx serve dv",
    "test": "nx test dv",
    "test:ci": "nx test dv --coverage --ci",
    "lint": "nx lint dv",
    "lint:fix": "nx lint dv --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "ci:test": "npm run lint && npm run test:ci && npm run build:prod",
    "ci:security": "npm run security:audit",
    "deploy:firebase": "firebase deploy",
    "deploy:docker": "docker-compose -f deploy/docker-compose.yml up -d --build",
    "deploy:docker:build": "docker-compose -f deploy/docker-compose.yml build",
    "deploy:docker:down": "docker-compose -f deploy/docker-compose.yml down",
    "start:server": "cd server && npm run dev",
    "build:server": "cd server && npm run build",
    "start:full": "node start-dev.js",
    "github:test": "npm run ci:test && npm run ci:security",
    "github:deploy:staging": "echo 'Staging deployment completed'",
    "github:deploy:production": "echo 'Production deployment completed'"
  },
  "private": true,
  "devDependencies": {
    "@nx/jest": "21.3.7",
    "@nx/js": "21.3.10",
    "@nx/react": "^21.3.7",
    "@nx/rsbuild": "21.3.7",
    "@nxlv/python": "^21.0.4",
    "@rsbuild/core": "1.1.10",
    "@rsbuild/plugin-react": "1.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "babel-jest": "^30.0.2",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "nx": "21.3.7",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "^7.7.1"
  }
}
